{
    "name": "dreamsync-api",
    "version": "1.0.0",
    "description": "DreamSync Platform API",
    "main": "src/index.ts",
    "scripts": {
        "start": "ts-node --project tsconfig.json src/index.ts",
        "dev": "nodemon --exec \"npx ts-node\" src/index.ts",
        "build": "tsc",
        "test-matchmaking": "ts-node test-matchmaking-mock.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
        "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts"
    },
    "dependencies": {
        "axios": "^1.6.7",
        "blindvote": "link:../../infrastructure/blindvote",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "eventsource-polyfill": "^0.9.6",
        "express": "^4.18.2",
        "graphql-request": "^6.1.0",
        "jsonwebtoken": "^9.0.2",
        "node-cron": "^3.0.3",
        "openai": "^4.104.0",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.2.1",
        "typeorm": "^0.3.24",
        "uuid": "^9.0.1",
        "web3-adapter": "link:../../infrastructure/web3-adapter"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.11.24",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.11.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "eslint": "^8.56.0",
        "nodemon": "^3.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
