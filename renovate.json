{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "rebaseWhen": "behind-base-branch"
    },
    "packageRules": [
        {
            "enabled": false,
            "groupName": "everything",
            "matchManagers": [
                "npm"
            ],
            "matchPackagePatterns": [
                "*"
            ],
            "separateMajorMinor": false
        }
    ],
    "vulnerabilityAlerts": {
        "enabled": true
    }
}
