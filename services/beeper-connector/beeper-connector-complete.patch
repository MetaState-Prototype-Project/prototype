+    }
+
+    /**
+     * Update an existing MetaEnvelope in eVault
+     */
+    async updateInEVault(metaEnvelope: MetaEnvelope): Promise<void> {
+        const payload: Web3ProtocolPayload = {
+            metaEnvelope,
+            operation: 'update'
+        };
+        await this.sendToEVault(payload);
+    }
