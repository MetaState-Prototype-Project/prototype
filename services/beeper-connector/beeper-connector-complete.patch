+
+    constructor(config: BeeperConfig) {
+        this.config = config;
+        this.db = new BeeperDatabase(config.dbPath);
+        this.adapter = new BeeperWeb3Adapter({
+            platform: 'beeper',
+            ontologyServerUrl: config.ontologyServerUrl,
+            eVaultUrl: config.eVaultUrl
+        });
